{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "CLAUDE.md"
  ],
  "theme": "miami-nights",
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "autoshare": false,
  "autoupdate": true,
  "keybinds": {
    "leader": "ctrl+space",
    "session_new": "ctrl+n",
    "session_list": "ctrl+k",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "lsp": {
    "php": {
      "command": [
        "intelephense",
        "--stdio"
      ],
      "extensions": [
        ".php"
      ]
    }
  }
}
