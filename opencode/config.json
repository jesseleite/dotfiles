{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "~/.dotfiles/agents/AGENTS.md",
    "AGENTS.md",
    "CLAUDE.md"
  ],
  "theme": "miami-nights",
  "autoshare": false,
  "autoupdate": true,
  "default_agent": "plan",
  "keybinds": {
    "leader": "ctrl+space",
    "session_new": "ctrl+n",
    "session_list": "ctrl+k",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "variant_cycle": "ctrl+y"
  },
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-6",
      "prompt": "You are Claude Code, Anthropic's official CLI for Claude.",
      "color": "#47bac0"
    },
    "build": {
      "model": "anthropic/claude-opus-4-6",
      "prompt": "You are Claude Code, Anthropic's official CLI for Claude.",
      "color": "#e4609b"
    },
    "research": {
      "model": "openai/gpt-5.3-codex",
      "variant": "high",
      "color": "#00EC6E",
      "mode": "subagent",
      "description": "Researches codebases and answers questions without making changes",
      "prompt": "You are a read-only research agent. You must never modify files, run destructive commands, or make changes to the codebase.",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  },
  "mcp": {
    "liege": {
      "type": "local",
      "command": [
        "/Users/jesseleite/.dotfiles/mcp/liege/liege"
      ],
      "enabled": true
    },
    "pretty_table": {
      "type": "local",
      "command": [
        "/Users/jesseleite/.dotfiles/mcp/pretty_table/pretty_table"
      ],
      "enabled": true
    }
  }
}
