{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "~/.dotfiles/agents/AGENTS.md",
    "AGENTS.md",
    "CLAUDE.md"
  ],
  "theme": "miami-nights",
  "model": "anthropic/claude-opus-4-5",
  "autoshare": false,
  "autoupdate": true,
  "keybinds": {
    "leader": "ctrl+space",
    "session_new": "ctrl+n",
    "session_list": "ctrl+k",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  }
}
